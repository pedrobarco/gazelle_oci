load("@rules_pkg//pkg:tar.bzl", "pkg_tar")
load("@rules_oci//oci:defs.bzl", "oci_image", "oci_tarball")
load("@aspect_bazel_lib//lib:transitions.bzl", "platform_transition_filegroup")
load("@rules_go//go:def.bzl", "go_binary", "go_library")

go_library(
    name = "oci_go_image_lib",
    srcs = ["main.go"],
    importpath = "github.com/pedrobarco/gazelle_oci/testdata/oci_go_image",
    visibility = ["//visibility:private"],
)

go_binary(
    name = "oci_go_image",
    embed = [":oci_go_image_lib"],
    visibility = ["//visibility:public"],
)

pkg_tar(
    name = "oci_go_image_layer",
    srcs = [":oci_go_image"],
)

oci_image(
    name = "image",
    base = "@distroless_base",
    entrypoint = ["/oci_go_image"],
    tars = [":oci_go_image_layer"],
)

platform_transition_filegroup(
    name = "transitioned_image",
    srcs = [":image"],
    target_platform = select({
        "@platforms//cpu:arm64": "@io_bazel_rules_go//go/toolchain:linux_arm64",
        "@platforms//cpu:x86_64": "@io_bazel_rules_go//go/toolchain:linux_amd64",
    }),
)

oci_tarball(
    name = "tarball",
    image = ":transitioned_image",
    repo_tags = ["oci_go_image:latest"],
)
